{
    "name": "utopia-php/config",
    "description": "A simple Config library to managing application config variables",
    "type": "library",
    "keywords": ["php","framework", "upf", "utopia", "config"],
    "license": "MIT",
    "autoload": {
        "psr-4": {"Utopia\\Config\\": "src/Config"}
    },
    "scripts": {
        "lint": "./vendor/bin/pint --config pint.json --test",
        "format": "./vendor/bin/pint --config pint.json",
        "tests": "vendor/bin/phpunit --configuration phpunit.xml",
        "check": "./vendor/bin/phpstan analyse --level 8 src tests"
    },
    "require": {
        "php": ">=8.0",
        "ext-yaml": "*",
        "utopia-php/validators": "0.1.*"
    },
    "require-dev": {
        "phpunit/phpunit": "12.*.*",
        "phpstan/phpstan": "2.*.*",
        "laravel/pint": "1.*.*"
    },
    "minimum-stability": "dev"
}
